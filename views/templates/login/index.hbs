<body>
  {{> nav}}
  {{> header}}
  <h3 class="logText">Sign in to start posting your photos!</h3>
  <form action="/login" method="post" class="submitForm">
    <div class="formRow">
      <label>Username:</label>
      <input type="text" name="username" />
    </div>
    <div class="formRow">
      <label>Password:</label>
      <input type="password" name="password" />
    </div>
    <div>
      <button type="submit" value="Log In" class="logSubmit">Log In</button>
    </div>
  </form>
</body>

</html>